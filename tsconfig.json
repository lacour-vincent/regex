{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["vitest/globals"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
